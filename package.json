{
  "name": "mcp-memory-ts",
  "version": "1.6.0",
  "description": "Cloud-based vector MCP memory service for Claude.ai - TypeScript implementation",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-memory": "./dist/cli/index.js",
    "mcp-memory-cli": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build-simple": "tsc -p tsconfig.simple.json",
    "build-full": "tsc",
    "build:vercel": "tsc -p tsconfig.vercel.json",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "mcp-server": "tsx src/desktop-mcp-server.ts",
    "mcp-server-full": "tsx src/mcp/server.ts",
    "mcp-server-remote": "tsx src/remote-mcp-server.ts",
    "api-server": "tsx src/api/server.ts",
    "cli": "tsx src/cli/index.ts",
    "cli:export": "tsx src/cli/index.ts export-vcard",
    "cli:import": "tsx src/cli/index.ts import-vcard",
    "cli:types": "tsx src/cli/index.ts list-types",
    "cli:test": "./scripts/test-cli.sh",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run tests/unit/",
    "test:integration": "vitest run tests/integration/",
    "test:e2e": "./scripts/run-e2e-tests.sh",
    "test:regression": "tsx scripts/pre-deploy-test.ts",
    "pre-deploy": "npm run build && npm run test:regression",
    "deploy:vercel": "./scripts/deploy-vercel.sh",
    "setup:vercel": "./scripts/setup-vercel-env.sh",
    "test:vercel": "./scripts/test-vercel-setup.sh",
    "verify:env": "./scripts/verify-env-config.sh",
    "migrate:schema": "tsx scripts/migrate-schema-optimization.ts",
    "migrate:schema:phase1": "tsx scripts/migrate-schema-optimization.ts migrate --phase=\"Phase 1\"",
    "migrate:schema:phase2": "tsx scripts/migrate-schema-optimization.ts migrate --phase=\"Phase 2\"",
    "migrate:schema:dry-run": "tsx scripts/migrate-schema-optimization.ts migrate --dry-run",
    "migrate:schema:stats": "tsx scripts/migrate-schema-optimization.ts stats",
    "migrate:schema:rollback": "tsx scripts/migrate-schema-optimization.ts rollback",
    "migrate:schema:test": "tsx scripts/test-migration-fixes.ts",
    "verify:schema": "tsx scripts/verify-schema-optimization.ts",
    "verify:schema:info": "tsx scripts/verify-schema-optimization.ts info",
    "migrate": "tsx scripts/migrate.ts",
    "migrate:status": "tsx scripts/migrate.ts status",
    "migrate:up": "tsx scripts/migrate.ts up",
    "migrate:down": "tsx scripts/migrate.ts down",
    "migrate:to": "tsx scripts/migrate.ts to",
    "migrate:verify": "tsx scripts/migrate.ts verify",
    "migrate:create": "tsx scripts/migrate-create.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "web:dev": "cd web && npm run dev",
    "web:build": "cd web && npm run build",
    "web:start": "cd web && npm start",
    "web:install": "cd web && npm install"
  },
  "keywords": [
    "mcp",
    "memory",
    "ai",
    "assistant",
    "vector",
    "search",
    "claude",
    "typescript",
    "turso",
    "libsql"
  ],
  "author": "Masa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bobmatnyc/mcp-memory-ts.git"
  },
  "bugs": {
    "url": "https://github.com/bobmatnyc/mcp-memory-ts/issues"
  },
  "homepage": "https://github.com/bobmatnyc/mcp-memory-ts#readme",
  "dependencies": {
    "@clerk/backend": "^2.17.0",
    "@clerk/nextjs": "^6.33.1",
    "@fastify/cors": "^9.0.1",
    "@libsql/client": "^0.15.15",
    "@types/node": "^20.0.0",
    "@vercel/node": "^5.3.24",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "didyoumean2": "^7.0.4",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "openai": "^6.0.1",
    "svix": "^1.76.1",
    "tiktoken": "^1.0.22",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
