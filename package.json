{
  "name": "mcp-memory-ts",
  "version": "1.0.0",
  "description": "Cloud-based vector MCP memory service for Claude.ai - TypeScript implementation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.simple.json",
    "build-full": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "mcp-server": "tsx src/simple-mcp-server.ts",
    "mcp-server-full": "tsx src/mcp/server.ts",
    "api-server": "tsx src/api/server.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest run tests/integration/",
    "test:regression": "tsx scripts/pre-deploy-test.ts",
    "pre-deploy": "npm run build && npm run test:regression",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "memory",
    "ai",
    "assistant",
    "vector",
    "search",
    "claude",
    "typescript",
    "turso",
    "libsql"
  ],
  "author": "Masa",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@libsql/client": "^0.14.0",
    "@types/node": "^20.0.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "openai": "^4.67.3",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
